#!/bin/bash
# ============================================================================
# EvoGS Configuration — EDIT THIS FILE FOR YOUR SYSTEM
# ============================================================================
# Copy this file to config_paths.sh and fill in your paths:
#   cp evogs_scripts/config_paths.sh.example evogs_scripts/config_paths.sh
#
# All SLURM scripts in evogs_scripts/ will source this file automatically.
# ============================================================================

# === ENVIRONMENT ===
# Path to your conda installation's init script
export CONDA_INIT="$HOME/miniconda/etc/profile.d/conda.sh"
# Path to the conda environment with EvoGS dependencies
export CONDA_ENV="/path/to/your/conda/envs/evogs"

# === PROJECT ===
# Root of the EvoGS repository (this directory)
export EVOGS_ROOT="/path/to/evogs"

# === DATASETS ===
export DNERF_DATA="$EVOGS_ROOT/data/dnerf"
export DYNERF_DATA="$EVOGS_ROOT/data/dynerf"
export HYPERNERF_DATA="$EVOGS_ROOT/data/hypernerf"

# === SLURM (optional — adjust for your cluster) ===
export SLURM_ACCOUNT="your_account"
export SLURM_PARTITION="your_partition"
export SLURM_EMAIL="you@example.com"
# GPU type (e.g., l40, a100, v100)
export SLURM_GPU_TYPE="l40"

